{
  "name": "sl8ck",
  "version": "1.0.3",
  "private": true,
  "description": "Notify Slack of GitHub Actions job and step status.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/act10ns/sl8ck.git"
  },
  "keywords": [
    "actions",
    "slack",
    "notify"
  ],
  "author": "satterly",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^2.2.0",
    "@slack/webhook": "^5.0.3"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^13.13.5",
    "@typescript-eslint/parser": "^2.31.0",
    "@zeit/ncc": "^0.20.5",
    "axios-mock-adapter": "^1.18.1",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.8.3"
  }
}
